<keymap version="1" name="My Keymap" parent="$default">
    <action id="ChooseDebugConfiguration"/>
    <action id="ChooseRunConfiguration"/>
    <action id="Debug">
        <keyboard-shortcut first-keystroke="shift ctrl meta d"/>
    </action>
    <action id="EditorLineStart">
        <keyboard-shortcut first-keystroke="home"/>
        <keyboard-shortcut first-keystroke="meta left"/>
    </action>
    <action id="SaveAndReformat">
        <keyboard-shortcut first-keystroke="meta s"/>
    </action>
    <action id="NextTab">
        <keyboard-shortcut first-keystroke="ctrl right"/>
        <keyboard-shortcut first-keystroke="shift ctrl l"/>
    </action>
    <action id="PreviousTab">
        <keyboard-shortcut first-keystroke="ctrl left"/>
        <keyboard-shortcut first-keystroke="shift ctrl h"/>
    </action>
    <action id="Run">
        <keyboard-shortcut first-keystroke="shift ctrl meta r"/>
    </action>
    <action id="SaveAll"/>
    <action id="SplitVertically">
        <keyboard-shortcut first-keystroke="ctrl a" second-keystroke="shift #100007c"/>
    </action>
    <action id="android.deploy.ApplyChanges">
        <keyboard-shortcut first-keystroke="ctrl meta e"/>
    </action>
    <action id="android.deploy.CodeSwap">
        <keyboard-shortcut first-keystroke="shift ctrl meta e"/>
    </action>
</keymap>
